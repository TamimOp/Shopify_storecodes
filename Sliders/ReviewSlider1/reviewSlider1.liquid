{% comment %}
  Trustpilot Review Section
  - Displays customer reviews in a slider format
  - Customizable colors, typography, and content
{% endcomment %}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

<style>
  .zs-review-trust {
    background-color: {{ section.settings.section_bg_color }};
    padding: {{ section.settings.section_padding_top }}px 20px {{ section.settings.section_padding_bottom }}px;
  }

  .zs-review-trust__container {
    max-width: 1570px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 630px;
    gap: 60px;
    align-items: start;
  }

  .zs-review-trust__slider-wrapper {
    position: relative;
    overflow: hidden;
  }

  .zs-review-trust__slider {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    transition: transform 0.4s ease;
  }

  .zs-review-trust__slide {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    grid-column: span 2;
  }

  .zs-review-trust__slide[data-slide]:not([data-slide="0"]) {
    display: none;
  }

  .zs-review-trust__slide.is-active {
    display: grid;
  }

  .zs-review-trust__card {
    background-color: {{ section.settings.card_bg_color }};
    border-radius: 16px;
    padding: 32px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    gap: 16px;
    box-sizing: border-box;
  }

  .zs-review-trust__card-header {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .zs-review-trust__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: {{ section.settings.avatar_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 14px;
    color: {{ section.settings.avatar_text_color }};
    text-transform: uppercase;
    flex-shrink: 0;
  }

  .zs-review-trust__name {
    font-weight: {{ section.settings.name_font_weight }};
    font-size: {{ section.settings.name_font_size }}px;
    color: {{ section.settings.name_color }};
    margin: 0;
  }

  .zs-review-trust__rating-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    flex-wrap: wrap;
  }

  .zs-review-trust__stars {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .zs-review-trust__stars svg {
    width: 95px;
    height: 18px;
  }

  .zs-review-trust__rating-number {
    font-weight: 600;
    font-size: 14px;
    color: {{ section.settings.text_color }};
  }

  .zs-review-trust__date {
    font-size: 13px;
    color: {{ section.settings.date_color }};
    white-space: nowrap;
  }

  .zs-review-trust__text {
    font-size: {{ section.settings.review_font_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .zs-review-trust__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    min-height: 470px;
  }

  .zs-review-trust__text-content {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .zs-review-trust__title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    line-height: 1.2;
    margin: 0;
  }

  .zs-review-trust__title em {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    display: block;
    margin-bottom: 8px;
  }

  .zs-review-trust__trustpilot {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .zs-review-trust__trustpilot-icon {
    width: 20px;
    height: 20px;
  }

  .zs-review-trust__trustpilot-text {
    font-size: 14px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
  }

  .zs-review-trust__subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    color: {{ section.settings.subtitle_color }};
    line-height: 1.6;
    margin: 0;
  }

  .zs-review-trust__navigation {
    display: flex;
    gap: 12px;
    margin-top: auto;
  }

  .zs-review-trust__nav-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 1px solid {{ section.settings.nav_border_color }};
    background: {{ section.settings.nav_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .zs-review-trust__nav-btn:hover:not(:disabled) {
    background: {{ section.settings.nav_hover_bg_color }};
    border-color: {{ section.settings.nav_hover_border_color }};
  }

  .zs-review-trust__nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .zs-review-trust__nav-btn svg {
    width: 24px;
    height: 24px;
    color: {{ section.settings.nav_icon_color }};
  }
  
  .zs-review-trust__trustpilot svg {
    width: 88px;
    height: 20px;
  }

  /* Tablet Landscape & Below (1200px) */
  @media (max-width: 1200px) {
    .zs-review-trust {
      padding: 60px 20px;
    }

    .zs-review-trust__container {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .zs-review-trust__content {
      min-height: auto;
      order: -1;
    }

    .zs-review-trust__title {
      font-size: clamp(32px, 5vw, {{ section.settings.title_font_size }}px);
    }
  }

  /* Tablet Portrait (768px - 1024px) */
  @media (max-width: 1024px) {
    .zs-review-trust__slide {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .zs-review-trust__card {
      padding: 24px;
    }

    .zs-review-trust__title {
      font-size: clamp(28px, 4.5vw, 40px);
    }

    .zs-review-trust__subtitle {
      font-size: clamp(14px, 2vw, {{ section.settings.subtitle_font_size }}px);
    }
  }

  /* Mobile Landscape & Below (768px) */
  @media (max-width: 768px) {
    .zs-review-trust {
      padding: 40px 16px;
    }

    .zs-review-trust__container {
      display: flex;
      flex-direction: column;
      gap: 30px;
      padding: 0;
      max-width: 100%;
    }

    .zs-review-trust__content {
      order: -1;
      min-height: auto;
      text-align: center;
    }

    .zs-review-trust__text-content {
      gap: 16px;
      align-items: center;
    }

    .zs-review-trust__trustpilot {
      justify-content: center;
    }

    .zs-review-trust__subtitle {
      font-size: 14px;
    }

    .zs-review-trust__slider-wrapper {
      overflow: visible;
      margin-left: -16px;
      margin-right: -16px;
      width: calc(100% + 32px);
    }

    .zs-review-trust__slider {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      gap: 16px;
      padding: 0 16px;
    }

    .zs-review-trust__slider::-webkit-scrollbar {
      display: none;
    }

    .zs-review-trust__slide {
      display: contents;
    }

    .zs-review-trust__card {
      flex-shrink: 0;
      width: calc(100vw - 64px);
      min-width: calc(100vw - 64px);
      max-width: calc(100vw - 64px);
      scroll-snap-align: start;
      padding: 20px;
      gap: 14px;
      box-sizing: border-box;
    }

    .zs-review-trust__title {
      font-size: clamp(24px, 6vw, 32px);
    }

    .zs-review-trust__title em {
      margin-bottom: 4px;
    }

    .zs-review-trust__trustpilot {
      gap: 10px;
    }

    .zs-review-trust__trustpilot svg {
      width: 70px;
      height: 16px;
    }

    .zs-review-trust__trustpilot-text {
      font-size: 13px;
    }

    .zs-review-trust__navigation {
      display: none;
    }
  }

  /* Small Mobile (480px and below) */
  @media (max-width: 480px) {
    .zs-review-trust {
      padding: 30px 12px;
    }

    .zs-review-trust__slider-wrapper {
      margin-left: -12px;
      margin-right: -12px;
      width: calc(100% + 24px);
    }

    .zs-review-trust__slider {
      padding: 0 12px;
      gap: 12px;
    }

    .zs-review-trust__card {
      width: calc(100vw - 48px);
      min-width: calc(100vw - 48px);
      max-width: calc(100vw - 48px);
      padding: 16px;
      border-radius: 12px;
    }

    .zs-review-trust__card-header {
      gap: 10px;
    }

    .zs-review-trust__avatar {
      width: 36px;
      height: 36px;
      font-size: 12px;
    }

    .zs-review-trust__name {
      font-size: 14px;
    }

    .zs-review-trust__stars svg {
      width: 80px;
      height: 16px;
    }

    .zs-review-trust__rating-number {
      font-size: 13px;
    }

    .zs-review-trust__date {
      font-size: 12px;
    }

    .zs-review-trust__text {
      font-size: 13px;
      line-height: 1.5;
    }

    .zs-review-trust__title {
      font-size: clamp(20px, 7vw, 28px);
    }

    .zs-review-trust__trustpilot svg {
      width: 60px;
      height: 14px;
    }

    .zs-review-trust__trustpilot-text {
      font-size: 12px;
    }

    .zs-review-trust__subtitle {
      font-size: 13px;
    }
  }
</style>

