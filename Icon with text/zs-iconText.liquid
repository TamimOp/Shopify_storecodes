        show: function(index) {
          const section = document.querySelector('.zs-features-{{ section.id }}');
          section.querySelectorAll('.zs-spotlight-tab').forEach((tab, i) => {
            tab.classList.toggle('active', i === index);
          });
          section.querySelectorAll('.zs-spotlight-panel').forEach((panel, i) => {
