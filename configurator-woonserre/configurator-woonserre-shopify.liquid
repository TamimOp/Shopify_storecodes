          <div class="vpc-sidebar__inner" id="vpc-sidebar__inner">
            <div class="vpc-sidebar__top">

              {% comment %} Size Calculator {% endcomment %}
              <div class="vpc-component vpc-size-calculator addon-component">
                <div class="vpc-addon-header">
                  <div class="vpc-component-title">
                    <h2 class="vpc-component-name heading-four">Grootte van jouw woonserre</h2>
                  </div>
                </div>
                <div class="vpc-addon-options">
                  <input type="hidden" id="extension-size-hidden" value="9" name="extension-size" required>
                  <div class="input-group">
                    <input type="number" 
                           name="extension-depth" 
                           id="extension-depth"
                           min="{{ section.settings.min_depth }}" 
                           max="{{ section.settings.max_depth }}" 
                           value="{{ section.settings.default_depth }}"
                           inputmode="numeric" 
                           pattern="[0-9]*" 
                           class="validate vpc-required-field" 
                           maxlength="4" 
                           required>
                    <label for="extension-depth">Diepte (cm)</label>
                  </div>
                  <div class="input-group">
                    <input type="number" 
                           name="extension-length" 
                           id="extension-length"
                           min="{{ section.settings.min_width }}" 
                           max="{{ section.settings.max_width }}" 
                           value="{{ section.settings.default_width }}"
                           inputmode="numeric" 
                           pattern="[0-9]*" 
                           class="validate vpc-required-field" 
                           maxlength="4" 
                           required>
                    <label for="extension-length">Breedte (cm)</label>
                  </div>
                  <div class="extension-size">
                    <span class="extension-size__result">9</span> m<sup>2</sup>
                  </div>
                </div>
                <p class="vpc-error-message">
                  <span class="vpc-error-message__length">Minimale breedte is {{ section.settings.min_width }} cm en maximum is {{ section.settings.max_width }} cm.</span>
                  <span class="vpc-error-message__depth">Minimale diepte is {{ section.settings.min_depth }} cm en maximum is {{ section.settings.max_depth }} cm.</span>
                  <span class="vpc-error-message__divider"></span>
                  <span class="vpc-error-message__contact">
                    Afwijkende maten? Neem dan <a href="{{ section.settings.contact_page | default: '/pages/contact' }}" class="vpc-error-message__link">contact</a> met ons op om de mogelijkheden te bespreken!
                  </span>
                </p>
              </div>

