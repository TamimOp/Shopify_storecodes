    #industry-applications-{{ section.id }} .industry-applications__container {
      flex-direction: column;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__sidebar {
      flex: 0 0 100%;
      max-width: 100%;
      margin-bottom: 30px;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__tabs {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }
    
