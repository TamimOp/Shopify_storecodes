{% comment %}
  ============================================
  ZS Icon Text Section - Creative Edition
  ============================================
  Unique, interactive features section with:
  - Smooth Carousel/Slider
  - Spotlight/Tab Mode
  - Accordion Style
  - Magazine Feature Layout
  - Horizontal Scroll Cards
{% endcomment %}

{%- style -%}
  /* CSS Variables */
  .zs-features-{{ section.id }} {
    --zs-primary: {{ section.settings.primary_color }};
    --zs-secondary: {{ section.settings.secondary_color }};
    --zs-accent: {{ section.settings.accent_color }};
    --zs-text-dark: {{ section.settings.text_dark }};
    --zs-text-light: {{ section.settings.text_light }};
    --zs-bg: {{ section.settings.section_bg }};
    --zs-card-bg: {{ section.settings.card_bg }};
    --zs-link-color: {{ section.settings.link_color }};
  }

  /* Section Container */
  .zs-features-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--zs-bg);
    position: relative;
    overflow: hidden;
  }

  /* Gradient Background Sweep */
  .zs-features-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -50%;
    width: 200%;
    height: 100%;
    background: linear-gradient(
      105deg,
      transparent 0%,
      transparent 40%,
      {{ section.settings.primary_color | color_modify: 'alpha', 0.03 }} 45%,
      {{ section.settings.secondary_color | color_modify: 'alpha', 0.05 }} 55%,
      transparent 60%,
      transparent 100%
    );
    pointer-events: none;
  }

  .zs-features-{{ section.id }} .zs-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .zs-features-{{ section.id }} .zs-container--full {
    max-width: 100%;
    padding: 0;
  }

  /* Header Section */
  .zs-features-{{ section.id }} .zs-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_margin }}px;
    padding: 0 20px;
    max-width: {{ section.settings.container_width }}px;
    margin-left: auto;
    margin-right: auto;
  }

  .zs-features-{{ section.id }} .zs-eyebrow {
    display: inline-block;
    font-size: {{ section.settings.eyebrow_size_desktop }}px;
    font-weight: 700;
    color: {{ section.settings.eyebrow_color }};
    margin-bottom: 12px;
    position: relative;
  }

  .zs-features-{{ section.id }} .zs-eyebrow::after {
    content: '';
    display: block;
    width: 60%;
    height: 3px;
    background: linear-gradient(90deg, var(--zs-primary), var(--zs-secondary));
    margin: 8px auto 0;
    border-radius: 3px;
  }

  .zs-features-{{ section.id }} .zs-main-heading {
    font-size: {{ section.settings.heading_size_desktop }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.15;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.header_description_margin }}px 0;
  }

  .zs-features-{{ section.id }} .zs-main-heading strong,
  .zs-features-{{ section.id }} .zs-main-heading b {
    color: var(--zs-primary);
    font-weight: inherit;
  }

  .zs-features-{{ section.id }} .zs-header-description {
    font-size: {{ section.settings.description_size_desktop }}px;
    line-height: 1.7;
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.header_button_margin }}px 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .zs-features-{{ section.id }} .zs-header-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 32px;
    font-size: 16px;
    font-weight: 600;
    color: {{ section.settings.button_text_color }};
    background: {{ section.settings.button_bg_color }};
    border: none;
    border-radius: 8px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
  }

  .zs-features-{{ section.id }} .zs-header-button:hover {
    background: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 20px {{ section.settings.button_bg_color | color_modify: 'alpha', 0.3 }};
  }

  /* ============================================
     LAYOUT: CAROUSEL/SLIDER
  ============================================ */
  {% if section.settings.layout_style == 'slider' %}
  .zs-features-{{ section.id }} .zs-slider-wrapper {
    position: relative;
    padding: 0 60px;
  }

  .zs-features-{{ section.id }} .zs-slider {
    display: flex;
    gap: {{ section.settings.card_gap }}px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 30px 0 40px;
  }

  .zs-features-{{ section.id }} .zs-slider::-webkit-scrollbar {
    display: none;
  }

  .zs-features-{{ section.id }} .zs-slide {
    flex: 0 0 {{ section.settings.slide_width }}px;
    scroll-snap-align: center;
    background: var(--zs-card-bg);
    border-radius: 24px;
    padding: 32px 28px;
    position: relative;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 1px solid rgba(0,0,0,0.06);
  }

  .zs-features-{{ section.id }} .zs-slide::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--zs-primary), var(--zs-secondary));
    border-radius: 24px 24px 0 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-slide:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 30px 60px -15px {{ section.settings.primary_color | color_modify: 'alpha', 0.2 }};
  }

  .zs-features-{{ section.id }} .zs-slide:hover::before {
    opacity: 1;
  }

  .zs-features-{{ section.id }} .zs-slide-number {
    position: absolute;
    top: 20px;
    right: 24px;
    font-size: 64px;
    font-weight: 900;
    color: {{ section.settings.primary_color | color_modify: 'alpha', 0.06 }};
    line-height: 1;
    pointer-events: none;
  }

  .zs-features-{{ section.id }} .zs-slide-icon {
    width: 72px;
    height: 72px;
    margin-bottom: 20px;
  }

  .zs-features-{{ section.id }} .zs-slide-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .zs-features-{{ section.id }} .zs-slide-title {
    font-size: 22px;
    font-weight: 700;
    color: var(--zs-text-dark);
    margin: 0 0 14px 0;
    line-height: 1.3;
  }

  .zs-features-{{ section.id }} .zs-slide-desc {
    font-size: 15px;
    color: var(--zs-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .zs-features-{{ section.id }} .zs-slide-desc a {
    color: var(--zs-link-color);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-slide-desc a:hover {
    border-bottom-color: var(--zs-link-color);
  }

  /* Slider Navigation */
  .zs-features-{{ section.id }} .zs-slider-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--zs-card-bg);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    z-index: 10;
  }

  .zs-features-{{ section.id }} .zs-slider-nav:hover {
    background: var(--zs-primary);
    color: #fff;
    transform: translateY(-50%) scale(1.1);
  }

  .zs-features-{{ section.id }} .zs-slider-nav--prev {
    left: 0;
  }

  .zs-features-{{ section.id }} .zs-slider-nav--next {
    right: 0;
  }

  .zs-features-{{ section.id }} .zs-slider-nav svg {
    width: 24px;
    height: 24px;
    stroke: currentColor;
    stroke-width: 2.5;
    fill: none;
  }

  /* Slider Progress Dots */
  .zs-features-{{ section.id }} .zs-slider-dots {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 30px;
  }

  .zs-features-{{ section.id }} .zs-slider-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: {{ section.settings.primary_color | color_modify: 'alpha', 0.2 }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .zs-features-{{ section.id }} .zs-slider-dot.active,
  .zs-features-{{ section.id }} .zs-slider-dot:hover {
    background: var(--zs-primary);
    transform: scale(1.3);
  }
  {% endif %}

  /* ============================================
     LAYOUT: SPOTLIGHT/TABS
  ============================================ */
  {% if section.settings.layout_style == 'spotlight' %}
  .zs-features-{{ section.id }} .zs-spotlight-wrapper {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 50px;
    align-items: start;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tabs {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 18px 24px;
    background: var(--zs-card-bg);
    border: 2px solid transparent;
    border-radius: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: left;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab:hover {
    border-color: {{ section.settings.primary_color | color_modify: 'alpha', 0.3 }};
    transform: translateX(8px);
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab.active {
    border-color: var(--zs-primary);
    background: {{ section.settings.primary_color | color_modify: 'alpha', 0.05 }};
    box-shadow: 0 10px 30px {{ section.settings.primary_color | color_modify: 'alpha', 0.15 }};
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab-icon {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--zs-text-dark);
    margin: 0;
    line-height: 1.4;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab-arrow {
    margin-left: auto;
    width: 24px;
    height: 24px;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-spotlight-tab.active .zs-spotlight-tab-arrow,
  .zs-features-{{ section.id }} .zs-spotlight-tab:hover .zs-spotlight-tab-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .zs-features-{{ section.id }} .zs-spotlight-content {
    position: relative;
    min-height: 400px;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    background: var(--zs-card-bg);
    border-radius: 24px;
    padding: 48px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.98);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 20px 60px rgba(0,0,0,0.08);
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-number {
    position: absolute;
    top: 30px;
    right: 40px;
    font-size: 120px;
    font-weight: 900;
    color: {{ section.settings.primary_color | color_modify: 'alpha', 0.05 }};
    line-height: 1;
    pointer-events: none;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-icon {
    width: 80px;
    height: 80px;
    margin-bottom: 24px;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-title {
    font-size: 32px;
    font-weight: 700;
    color: var(--zs-text-dark);
    margin: 0 0 20px 0;
    line-height: 1.2;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-desc {
    font-size: 17px;
    color: var(--zs-text-light);
    line-height: 1.8;
    margin: 0;
    max-width: 500px;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-desc a {
    color: var(--zs-link-color);
    font-weight: 600;
    text-decoration: none;
    position: relative;
  }

  .zs-features-{{ section.id }} .zs-spotlight-panel-desc a::after {
    content: ' ‚Üí';
  }
  {% endif %}

  /* ============================================
     LAYOUT: ACCORDION
  ============================================ */
  {% if section.settings.layout_style == 'accordion' %}
  .zs-features-{{ section.id }} .zs-accordion-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .zs-features-{{ section.id }} .zs-accordion-item {
    background: var(--zs-card-bg);
    border-radius: 20px;
    margin-bottom: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.04);
    transition: all 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-accordion-item:hover {
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .zs-features-{{ section.id }} .zs-accordion-item.active {
    box-shadow: 0 15px 40px {{ section.settings.primary_color | color_modify: 'alpha', 0.15 }};
  }

  .zs-features-{{ section.id }} .zs-accordion-header {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px 30px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    background: transparent;
    width: 100%;
    text-align: left;
  }

  .zs-features-{{ section.id }} .zs-accordion-header:hover {
    background: {{ section.settings.primary_color | color_modify: 'alpha', 0.03 }};
  }

  .zs-features-{{ section.id }} .zs-accordion-item.active .zs-accordion-header {
    background: {{ section.settings.primary_color | color_modify: 'alpha', 0.05 }};
  }

  .zs-features-{{ section.id }} .zs-accordion-number {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--zs-primary), var(--zs-secondary));
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .zs-features-{{ section.id }} .zs-accordion-icon {
    width: 52px;
    height: 52px;
    flex-shrink: 0;
  }

  .zs-features-{{ section.id }} .zs-accordion-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .zs-features-{{ section.id }} .zs-accordion-title {
    flex: 1;
    font-size: 20px;
    font-weight: 600;
    color: var(--zs-text-dark);
    margin: 0;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-accordion-item.active .zs-accordion-title {
    color: var(--zs-primary);
  }

  .zs-features-{{ section.id }} .zs-accordion-toggle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: {{ section.settings.primary_color | color_modify: 'alpha', 0.1 }};
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-accordion-item.active .zs-accordion-toggle {
    background: var(--zs-primary);
    transform: rotate(180deg);
  }

  .zs-features-{{ section.id }} .zs-accordion-toggle svg {
    width: 20px;
    height: 20px;
    stroke: var(--zs-primary);
    stroke-width: 2.5;
    fill: none;
  }

  .zs-features-{{ section.id }} .zs-accordion-item.active .zs-accordion-toggle svg {
    stroke: #fff;
  }

  .zs-features-{{ section.id }} .zs-accordion-body {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .zs-features-{{ section.id }} .zs-accordion-item.active .zs-accordion-body {
    max-height: 500px;
  }

  .zs-features-{{ section.id }} .zs-accordion-content {
    padding: 0 30px 30px 94px;
  }

  .zs-features-{{ section.id }} .zs-accordion-desc {
    font-size: 16px;
    color: var(--zs-text-light);
    line-height: 1.8;
    margin: 0;
  }

  .zs-features-{{ section.id }} .zs-accordion-desc a {
    color: var(--zs-link-color);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 2px solid var(--zs-link-color);
    transition: all 0.3s ease;
  }

  .zs-features-{{ section.id }} .zs-accordion-desc a:hover {
    background: {{ section.settings.link_color | color_modify: 'alpha', 0.1 }};
  }
  {% endif %}

  /* ============================================
     LAYOUT: MAGAZINE/FEATURE
  ============================================ */
  {% if section.settings.layout_style == 'magazine' %}
  .zs-features-{{ section.id }} .zs-magazine-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 24px;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature {
    grid-row: span 2;
    background: linear-gradient(145deg, var(--zs-primary), var(--zs-secondary));
    border-radius: 32px;
    padding: 48px 40px;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 500px;
    position: relative;
    overflow: hidden;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
    border-radius: 50%;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature-icon {
    width: 90px;
    height: 90px;
    filter: brightness(0) invert(1);
    margin-bottom: 30px;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature-content {
    position: relative;
    z-index: 1;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature-title {
    font-size: 36px;
    font-weight: 700;
    margin: 0 0 20px 0;
    line-height: 1.2;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature-desc {
    font-size: 17px;
    line-height: 1.8;
    opacity: 0.9;
    margin: 0;
  }

  .zs-features-{{ section.id }} .zs-magazine-feature-desc a {
    color: #fff;
    font-weight: 600;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .zs-features-{{ section.id }} .zs-magazine-grid {
    display: contents;
  }

  .zs-features-{{ section.id }} .zs-magazine-card {
    background: var(--zs-card-bg);
    border-radius: 24px;
    padding: 32px;
    transition: all 0.4s ease;
    border: 1px solid rgba(0,0,0,0.05);
  }

  .zs-features-{{ section.id }} .zs-magazine-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  .zs-features-{{ section.id }} .zs-magazine-card-icon {
    width: 56px;
    height: 56px;
    margin-bottom: 18px;
  }

  .zs-features-{{ section.id }} .zs-magazine-card-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .zs-features-{{ section.id }} .zs-magazine-card-title {
    font-size: 19px;
    font-weight: 700;
    color: var(--zs-text-dark);
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .zs-features-{{ section.id }} .zs-magazine-card-desc {
    font-size: 15px;
    color: var(--zs-text-light);
    line-height: 1.7;
    margin: 0;
  }

  .zs-features-{{ section.id }} .zs-magazine-card-desc a {
    color: var(--zs-link-color);
    font-weight: 600;
    text-decoration: none;
  }

  /* Magazine Bottom Row */
  .zs-features-{{ section.id }} .zs-magazine-bottom {
    grid-column: span 2;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .zs-features-{{ section.id }} .zs-magazine-bottom .zs-magazine-card {
    padding: 28px;
  }
  {% endif %}

  /* ============================================
     LAYOUT: HORIZONTAL SCROLL CARDS
  ============================================ */
  {% if section.settings.layout_style == 'scroll' %}
  .zs-features-{{ section.id }} .zs-scroll-wrapper {
    position: relative;
  }

  .zs-features-{{ section.id }} .zs-scroll-track {
    display: flex;
    gap: 24px;
    padding: 20px 40px 40px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    scrollbar-width: none;
  }

  .zs-features-{{ section.id }} .zs-scroll-track::-webkit-scrollbar {
    display: none;
  }

  .zs-features-{{ section.id }} .zs-scroll-card {
    flex: 0 0 320px;
    scroll-snap-align: start;
