      margin-bottom: 0;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__tab-btn {
      padding: 8px 15px;
      border: 1px solid #e0e0e0;
      border-radius: 20px;
      white-space: nowrap;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__tab-btn.active {
      border-color: var(--active-color);
    }
    
    #industry-applications-{{ section.id }} .industry-applications__heading {
      font-size: 26px;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (max-width: 767px) {
    #industry-applications-{{ section.id }} .industry-applications__grid {
      grid-template-columns: 1fr;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__heading {
      font-size: 22px;
    }
    
    #industry-applications-{{ section.id }} .industry-applications__tabs {
      justify-content: center;
    }
  }
</style>
