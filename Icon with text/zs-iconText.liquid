              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
      </div>
    </div>
    {% endif %}

    {% comment %} LAYOUT: HORIZONTAL SCROLL {% endcomment %}
    {% if section.settings.layout_style == 'scroll' %}
