    <div class="zs-slider-wrapper">
      <button class="zs-slider-nav zs-slider-nav--prev" onclick="ZSSlider_{{ section.id | replace: '-', '_' }}.prev()">
        <svg viewBox="0 0 24 24"><path d="M15 18l-6-6 6-6"/></svg>
      </button>
      
