        {%- for block in section.blocks -%}
          <div class="zs-slide" {{ block.shopify_attributes }}>
            <span class="zs-slide-number">{{ forloop.index | prepend: '0' | slice: -2, 2 }}</span>
            <div class="zs-slide-icon">
              {%- if block.settings.icon_image != blank -%}
