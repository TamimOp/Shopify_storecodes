<style>
  #industry-applications-{{ section.id }} {
    background-color: {{ section.settings.section_background_color }};
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__container {
    display: flex;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    gap: 40px;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__sidebar {
    flex: 0 0 {{ section.settings.sidebar_width }}%;
    max-width: {{ section.settings.sidebar_width }}%;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__sidebar-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e0e0e0;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__tabs {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__tab {
    margin-bottom: 5px;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__tab-btn {
    background: none;
    border: none;
    padding: 10px 0;
    font-size: 16px;
    cursor: pointer;
    text-align: left;
    width: 100%;
    color: var(--inactive-color);
    transition: color 0.3s ease;
    font-family: inherit;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__tab-btn:hover,
  #industry-applications-{{ section.id }} .industry-applications__tab-btn.active {
    color: var(--active-color);
  }
  
  #industry-applications-{{ section.id }} .industry-applications__content {
    flex: 1;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__heading {
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 30px;
    text-align: center;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.cards_per_row }}, 1fr);
    gap: {{ section.settings.card_gap }}px;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card {
    background-color: {{ section.settings.card_background_color }};
    border-radius: 0;
    overflow: hidden;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-5px);
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card-image {
    width: 100%;
    height: 180px;
    overflow: hidden;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card:hover .industry-applications__card-image img {
    transform: scale(1.05);
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card-image .placeholder-svg {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card-content {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 12px 0;
    text-align: center;
  }
  
  #industry-applications-{{ section.id }} .industry-applications__card-description {
    font-size: 14px;
    line-height: 1.6;
    margin: 0;
  }
  
