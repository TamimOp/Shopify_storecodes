      <button class="zs-slider-nav zs-slider-nav--next" onclick="ZSSlider_{{ section.id | replace: '-', '_' }}.next()">
        <svg viewBox="0 0 24 24"><path d="M9 18l6-6-6-6"/></svg>
      </button>
      
      <div class="zs-slider-dots">
        {%- for block in section.blocks -%}
          <button class="zs-slider-dot{% if forloop.first %} active{% endif %}" onclick="ZSSlider_{{ section.id | replace: '-', '_' }}.goTo({{ forloop.index0 }})"></button>
        {%- endfor -%}
      </div>
    </div>

    <script>
      const ZSSlider_{{ section.id | replace: '-', '_' }} = {
        slider: null,
        dots: null,
        currentIndex: 0,
        totalSlides: {{ section.blocks.size }},
        
        init: function() {
          this.slider = document.getElementById('zs-slider-{{ section.id }}');
          this.dots = document.querySelectorAll('.zs-features-{{ section.id }} .zs-slider-dot');
          
          this.slider.addEventListener('scroll', () => {
            const slideWidth = this.slider.querySelector('.zs-slide').offsetWidth + {{ section.settings.card_gap }};
            const newIndex = Math.round(this.slider.scrollLeft / slideWidth);
            if (newIndex !== this.currentIndex) {
              this.currentIndex = newIndex;
              this.updateDots();
            }
          });
        },
        
        next: function() {
          this.currentIndex = (this.currentIndex + 1) % this.totalSlides;
          this.scrollToIndex();
        },
        
        prev: function() {
          this.currentIndex = (this.currentIndex - 1 + this.totalSlides) % this.totalSlides;
          this.scrollToIndex();
        },
        
        goTo: function(index) {
          this.currentIndex = index;
          this.scrollToIndex();
        },
        
        scrollToIndex: function() {
          const slide = this.slider.querySelectorAll('.zs-slide')[this.currentIndex];
          if (slide) {
            slide.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
          }
          this.updateDots();
        },
        
        updateDots: function() {
          this.dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === this.currentIndex);
          });
        }
      };
      
      document.addEventListener('DOMContentLoaded', function() {
        ZSSlider_{{ section.id | replace: '-', '_' }}.init();
      });
    </script>
    {% endif %}

